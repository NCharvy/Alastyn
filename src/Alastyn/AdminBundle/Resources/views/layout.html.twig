{# src //Bundle/Resources/views/layout.html.twig #}

{% extends "::base.html.twig" %}
{% block title %} {{ parent() }} - Administration{% endblock %}
{%  block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('/bundles/admin/css/sb-admin.css') }}" rel="stylesheet" type="text/css" />
    <link href="{{ asset('/bundles/admin/lib/font-awesome/css/font-awesome.min.css') }}" rel="stylesheet" type="text/css" />
{% endblock %}
{% block body %}
    <div id="wrapper">

        <!-- Navigation -->
        <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="{{ path('_index') }}">Alastyn</a>
            </div>
            <!-- Top Menu Items -->
            <ul class="nav navbar-right top-nav">
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-user"></i> {{ app.user.username }} <b class="caret"></b></a>
                    <ul class="dropdown-menu">
                        <li>
                            <a href="{{ path('logout') }}"><i class="fa fa-fw fa-power-off"></i> Log Out</a>
                        </li>
                    </ul>
                </li>
            </ul>
            <!-- Sidebar Menu Items - These collapse to the responsive navigation menu on small screens -->
            <div class="collapse navbar-collapse navbar-ex1-collapse">
                <ul class="nav navbar-nav side-nav">
                    <li>
                        <a href="{{ path('_indexAdmin') }}"><i class="fa fa-fw fa-dashboard"></i> Tableau de bord</a>
                    </li>
                    <li>
                        <a href="javascript:;" data-toggle="collapse" data-target="#flux"><i class="fa fa-fw fa-rss"></i> Flux <i class="fa fa-fw fa-caret-down"></i></a>
                        <ul id="flux" class="collapse">
                            <li>
                                <a href="{{ path('_list_flow', {'page': 1}) }}">Voir la liste des flux</a>
                            </li>
                            <li>
                                <a href="{{ path('_create_flow') }}">Ajouter flux</a>
                            </li>
                        </ul>
                    </li>
                    <li>
                        <a href="javascript:;" data-toggle="collapse" data-target="#domain"><i class="fa fa-fw fa-leaf"></i> Domaine <i class="fa fa-fw fa-caret-down"></i></a>
                        <ul id="domain" class="collapse">
                            <li>
                                <a href="{{ path('_list_domain', {'page': 1}) }}">Voir la liste des domaines</a>
                            </li>
                            <li>
                                <a href="{{ path('_create_domain') }}">Ajouter domaine</a>
                            </li>
                        </ul>
                    </li>
                    <li>
                        <a href="javascript:;" data-toggle="collapse" data-target="#region"><i class="fa fa-fw fa-map"></i> Région <i class="fa fa-fw fa-caret-down"></i></a>
                        <ul id="region" class="collapse">
                            <li>
                                <a href="{{ path('_view_regions', {'page': 1}) }}">Voir la liste des régions</a>
                            </li>
                            <li>
                                <a href="{{ path('_create_region') }}">Ajouter région</a>
                            </li>
                        </ul>
                    </li>
                    <li>
                        <a href="javascript:;" data-toggle="collapse" data-target="#state"><i class="fa fa-fw fa-globe"></i> Pays <i class="fa fa-fw fa-caret-down"></i></a>
                        <ul id="state" class="collapse">
                            <li>
                                <a href="{{ path('_view_states', {'page': 1}) }}">Voir la liste des pays</a>
                            </li>
                            <li>
                                <a href="{{ path('_create_state') }}">Ajouter pays</a>
                            </li>
                        </ul>
                    </li>
                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </nav>

        <div id="page-wrapper">
            <div class="container-fluid">
                {% block content %}{% endblock %}
            </div>
        </div>
        <!-- /#page-wrapper -->

    </div>
{% endblock %}