{% extends "AlastynAdminBundle::layout.html.twig" %}

{% block content %}
	<main style="overflow : hidden;">
        <div class="col-sm-6 col-sm-offset-3">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h2 style="text-align : center;">Enregistrement d'appellations</h2>
                </div>
                <div class="panel-body">
                    <div class="col-md-10 col-md-offset-1">
                        {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
                        {{ form_errors(form) }}
                        <div class="form-group">
                            {{ form_label(form.nom, "Nom", {'label_attr': {'class': 'col-sm-5 control-label'}}) }}
                            {{ form_errors(form.nom) }}
                            <div class="col-sm-6">
                                {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>
                        <div class="form-group">
                            {{ form_label(form.publication, "Autoriser la publication ?", {'label_attr': {'class': 'col-sm-5 control-label'}}) }}
                            {{ form_errors(form.publication) }}
                            <div class="col-sm-6">
                                {{ form_widget(form.publication, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>
                        <div class="form-group">
                            {{ form_label(form.region, "Région", {'label_attr': {'class': 'col-sm-5 control-label'}}) }}
                            {{ form_errors(form.region) }}
                            <div class="col-sm-6">
                                {{ form_widget(form.region, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>
                        <div class="col-md-3 col-md-offset-8">
                            {{ form_widget(form.enregistrer, {'attr': {'class': 'btn btn-primary'}}) }}
                        </div>
                        {{ form_rest(form) }} {# Génération automatique de champs pas encore écrits, comme ceux générés automatiquement par Symfony #}
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </main>
{% endblock %}