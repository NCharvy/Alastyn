{%  extends "AlastynAdminBundle::layout.html.twig" %}

{% block content %}
    <div class="row">
        <div class="col-xs-12 col-sm-6 col-xs-offset-0 col-sm-offset-3">
            <h2 style="text-align : center;">{{ 'list.state'|trans }}</h2>
            <table class="table table-hover table-bordered table-stripped">
                <tr>
                    <th>{{ 'name'|trans }}</th>
                    <th>{{ 'abbreviation'|trans }}</th>
                    <th>{{ 'publication'|trans }}</th>
                    <th>{{ 'icon'|trans }}</th>
                    <th>{{ 'operations'|trans }}</th>
                </tr>
                {% for state in states %}
                    <tr>
                        <td>{{ state.nom }}</td>
                        <td>{{ state.abbr }}</td>
                        <td>
                            {% if state.publication == 1 %}
                                {{ 'yes'|trans }}
                            {% else %}
                                {{ 'no'|trans }}
                            {% endif %}
                        </td>
                        <td><img src="{{ asset("uploads/icons/#{state.icone}") }}" width="50" /></td>
                        <td>
                            <a href="{{ path('_update_state', {'id': state.id}) }}"><i class="fa fa-pencil"></i></a>
                            <a href="{{ path('_delete_state', {'id': state.id}) }}"><i class="fa fa-trash"></i></a>
                        </td>
                    </tr>
                {% endfor %}
            </table>
            {% include 'AlastynAdminBundle:Admin:paging.html.twig' %}
        </div>
    </div>
{% endblock %}