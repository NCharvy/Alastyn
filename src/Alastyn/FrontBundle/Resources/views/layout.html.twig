{# src //Bundle/Resources/views/layout.html.twig #}
{% extends "::base.html.twig" %}
{% block title %} {{ parent() }} - {% endblock %} 
{% block body %}
  <nav class="navbar navbar-default">
    <div class="container-fluid">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" 
        data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="{{ path("_index") }}">{{ 'home' |trans }}</a>
        <!-- Button trigger modal -->
        <button type="button" class="btn btn-primary btn-xs" data-toggle="modal" data-target="#suggerer">
         Suggerer Un Flux
        </button>
      </div>
      <div class="collapse navbar-collapse navbar-right" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav">
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">{{ 'country' |trans }} 
            <span class="caret"></span></a>
            <ul class="dropdown-menu">
              <li><a href="#">France</a></li>
              <li><a href="#">France</a></li>
              <li><a href="#">France</a></li>
              <li><a href="#">France</a></li>
              <li><a href="#">France</a></li>
              <li><a href="#">France</a></li>
            </ul>
          </li>
        </ul>
        <form class="navbar-form navbar-left" role="search">
          <div class="form-group">
            <input type="text" class="form-control" placeholder="Recherches">
          </div>
          <button type="submit" class="btn btn-default">{{ 'search' |trans }}</button>
        </form>
              <ul class="nav navbar-nav navbar-right">
          <li><a href="{{ path("_indexAdmin") }}">{{ 'admin' |trans }}</a></li>
        </ul>
      </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
  </nav>

<!-- Modal -->
<div class="modal fade" id="suggerer" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <b>Suggerer Un Flux</b>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      </div>
      {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
      {{ form_errors(form) }}
      <div class="modal-body">
        <div class="row">
            <!-- Text input-->
            <div class="form-group col-md-6">
              {{ form_label(form.rss, 'url_rss'|trans, {'label_attr': {'class': 'col-md-12 control-label'}}) }}
              {{ form_errors(form.rss) }}
              <div class="col-md-12">
              {{ form_widget(form.rss, {'attr': {'class': 'form-control input-md'}}) }}
              </div>
            </div>
            <!-- Text input-->
            <div class="form-group col-md-6">
              {{ form_label(form.site, 'url_web'|trans, {'label_attr': {'class': 'col-md-12 control-label'}}) }}
              {{ form_errors(form.site) }}
              <div class="col-md-12">
              {{ form_widget(form.site, {'attr': {'class': 'form-control input-md'}}) }}
              </div>
            </div>
            <!-- Text input-->
            <div class="form-group col-md-6">
              {{ form_label(form.nomDomaine, 'domaine'|trans, {'label_attr': {'class': 'col-md-12 control-label'}}) }}
              {{ form_errors(form.nomDomaine) }}
              <div class="col-md-12">
              {{ form_widget(form.nomDomaine, {'attr': {'class': 'form-control input-md'}}) }}
              </div>
            </div>
            <!-- Text input-->
            <div class="form-group col-md-6">
              {{ form_label(form.adresse, 'address'|trans, {'label_attr': {'class': 'col-md-12 control-label'}}) }}
              {{ form_errors(form.adresse) }}
              <div class="col-md-12">
              {{ form_widget(form.adresse, {'attr': {'class': 'form-control input-md'}}) }}
              </div>
            </div>
            <!-- Text input-->
            <div class="form-group col-md-6">
              {{ form_label(form.codepostal, 'zip_code'|trans, {'label_attr': {'class': 'col-md-12 control-label'}}) }}
              {{ form_errors(form.codepostal) }}
              <div class="col-md-12">
              {{ form_widget(form.codepostal, {'attr': {'class': 'form-control input-md'}}) }}
              </div>
            </div>
          <!-- Text input-->
          <div class="form-group col-md-6">
            {{ form_label(form.ville, 'city'|trans, {'label_attr': {'class': 'col-md-12 control-label'}}) }}
            {{ form_errors(form.ville) }}
            <div class="col-md-12">
              {{ form_widget(form.ville, {'attr': {'class': 'form-control input-md'}}) }}
            </div>
          </div>
            <!-- Select input-->
            <div class="form-group col-md-6">
              {{ form_label(form.region, 'region'|trans, {'label_attr': {'class': 'col-md-12 control-label'}}) }}
              {{ form_errors(form.region) }}
              <div class="col-md-12">
              {{ form_widget(form.region, {'attr': {'class': 'form-control input-md'}}) }}
              </div>
            </div>
        </div>
        <hr>
        <div class="row">
            <!-- Text input-->
            <div class="form-group col-md-6">
              {{ form_label(form.courriel, 'email'|trans, {'label_attr': {'class': 'col-md-12 control-label'}}) }}
              {{ form_errors(form.courriel) }}
              <div class="col-md-12">
              {{ form_widget(form.courriel, {'attr': {'class': 'form-control input-md'}}) }}
              </div>
            </div>
            <!-- Text input-->
            <div class="form-group col-md-6">
              {{ form_label(form.nom, 'your_first_name'|trans, {'label_attr': {'class': 'col-md-12 control-label'}}) }}
              {{ form_errors(form.nom) }}
              <div class="col-md-12">
              {{ form_widget(form.nom, {'attr': {'class': 'form-control input-md'}}) }}
              </div>
            </div>
            <!-- Text input-->
            <div class="form-group col-md-6">
              {{ form_label(form.prenom, 'your_name'|trans, {'label_attr': {'class': 'col-md-12 control-label'}}) }}
              {{ form_errors(form.prenom) }}
              <div class="col-md-12">
              {{ form_widget(form.prenom, {'attr': {'class': 'form-control input-md'}}) }}
              </div>
            </div>
        </div>
        <div>
            Ici mettre un Captcha
        </div>
    </div>
    <div class="modal-footer">
          <div class="col-md-3 col-md-offset-8">
            {{ form_widget(form.enregistrer, {'attr': {'class': 'btn btn-primary'}, 'label': 'register'|trans}) }}
          </div>
      </div>
      {{ form_rest(form) }} {# Génération automatique de champs pas encore écrits, comme ceux générés automatiquement par Symfony #}
      {{ form_end(form) }}
    </div>
  </div>
</div>

{% endblock %}