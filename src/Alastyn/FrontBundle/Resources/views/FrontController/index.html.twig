{% extends "AlastynFrontBundle::layout.html.twig" %}
{% block stylesheets %}{{ parent() }}
 <link href="{{ asset('/bundles/front/css/style.css') }}" rel="stylesheet" type="text/css" />
{% endblock %}
{% block title %} {{ parent() }}Home{% endblock %}

{% block body %}
{{ parent() }}

<h2>Derniers articles des vignerons</h2>
{% set cont = 0 %}
{% for feed in feeds %}
	{% if feed == feeds[0] %}
		<div class="row">
		  <div class="col-md-offset-4 col-md-4">
		    <div class="thumbnail">
				<ul class="img-list">
					<li>
					{{ feed.items[0].preimage|raw }}  <!--maybe use image du domaine(logo)-->
					 <span class="text-content"><span>
					    <p><i> langue {{ feed.items[0].language }}</i></p>
					    <p hidden>{{ feed.items[0].id }}</p>
					    <p><strong>Auteur {{ feed.items[0].author }}</strong>, 
					    <i>{{ feed.items[0].date|date('d/m/Y H:i:s', "Europe/Paris") }}</i></p>
					    {% set tmp = feed.items[0].content | raw %}
						<p>{{ tmp|slice(0, 140)|striptags }}...</p>
						<p><a href="{{ feed.items[0].url }}" class="btn btn-primary" role="button" target="_blank">Lire la suite</a></p>
					</span></span>
				</ul>
				<h4>{{ feed.items[0].title }}</h4>
		    </div>
		  </div>
		</div>
		<div class="row">
	{% else %}	
	{% if (cont - 1) % 6 == 0 %}
		</div>
		<div class="row">
	{% endif %}
			<div class="col-md-2">
			   	<div class="thumbnail">
					<ul class="img-list">
						<li>
						{{ feed.items[0].preimage|raw }} <!--maybe use image du domaine(logo)-->
						<span class="text-content"><span>
						    <p hidden>{{ feed.items[0].id }}</p>
							{% if (feed.items[0].author is empty) == false %}
						    <p><strong>{{ feed.items[0].author }}</strong>,
							{% endif %}
						    <i>{{ feed.items[0].date|date('d/m/Y H:i:s', "Europe/Paris") }}</i></p>
						    {% set tmp = feed.items[0].content | raw %}
							<p class="content-rss">{{ tmp|slice(0, 140)|striptags }}...</p>
							<p><a href="{{ feed.items[0].url }}" class="btn btn-primary btn-xs" role="button" target="_blank">Lire la suite</a></p>
						</span></span>
					</ul>
						<b class="title-rss">{{ feed.items[0].title }}</b>
			  	</div>
			</div>	
	{% endif %}
{% set cont = cont + 1 %}
{% endfor %}
	</div>
{% endblock %}